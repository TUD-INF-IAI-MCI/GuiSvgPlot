<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.controller.wizard.chart.Stage5Controller">
    <children>
        <GridPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
            <children>
                <Label fx:id="label_grid" contentDisplay="RIGHT" prefHeight="17.0" prefWidth="300.0"
                       text="Gitterlinien zeichnen"/>
                <CheckBox fx:id="checkbox_hgrid" mnemonicParsing="false" text="horizontal" GridPane.columnIndex="1"/>
                <CheckBox fx:id="checkbox_vgrid" mnemonicParsing="false" text="vertikal" GridPane.columnIndex="1"
                          GridPane.rowIndex="1"/>

                <Label fx:id="label_xlines" contentDisplay="RIGHT" prefHeight="17.0" prefWidth="300.0"
                       text="Hilfslinien auf der X-Achse an den Punkten" GridPane.rowIndex="2"/>
                <TextField fx:id="textField_xlines"
                           accessibleText="X-Achsen-Punkte , durch die Hilflinien verlaufen sollen."
                           promptText="x1 x2 x3" GridPane.columnIndex="1" GridPane.columnSpan="2"
                           GridPane.rowIndex="2"/>

                <Label fx:id="label_ylines" contentDisplay="RIGHT" prefHeight="17.0" prefWidth="300.0"
                       text="Hilfslinien auf der Y-Achse an den Punkten" GridPane.rowIndex="3"/>
                <TextField fx:id="textField_ylines"
                           accessibleText="Y-Achsen-Punkte, durch die Hilfslinien verlaufen sollen."
                           promptText="y1 y2 y3" GridPane.columnIndex="1" GridPane.columnSpan="2"
                           GridPane.rowIndex="3"/>

                <Label fx:id="label_dblaxes" contentDisplay="RIGHT" prefHeight="17.0" prefWidth="300.0"
                       text="Doppelte Achsen zeichnen" GridPane.rowIndex="4"/>
                <CheckBox fx:id="checkbox_dblaxes" accessibleText="doppelte Achsen zeichnen" mnemonicParsing="false"
                          prefHeight="17.0" text="doppelte Achsen" GridPane.columnIndex="1" GridPane.columnSpan="2"
                          GridPane.rowIndex="4"/>

                <Label fx:id="label_pointsborderless" contentDisplay="RIGHT" prefHeight="17.0" prefWidth="300.0"
                       text="Punktsymbole ohne Rand zeichnen" GridPane.rowIndex="5"/>
                <CheckBox fx:id="checkbox_pointsborderless" accessibleText="Randlose Punktsymbole zeichnen"
                          mnemonicParsing="false" prefHeight="17.0" text="randlose Punkte" GridPane.columnIndex="1"
                          GridPane.rowIndex="5"/>
            </children>
        </GridPane>
    </children>
</AnchorPane>
