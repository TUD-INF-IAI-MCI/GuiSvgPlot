            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
            <children>
                <Label fx:id="label_cssFile" contentDisplay="RIGHT" prefHeight="17.0" prefWidth="300.0" text="%csv_file" />
                <TextField fx:id="textField_cssFile" accessibleText="Pfad zur CSS-Datei" GridPane.columnIndex="1" />

                <Label fx:id="label_size" contentDisplay="RIGHT" prefHeight="17.0" prefWidth="300.0" text="%size_of_diagram" GridPane.rowIndex="1" />
                <Label fx:id="label_sizeWidth" alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="18.0" text="%width" textAlignment="RIGHT" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
                    <padding>
                        <Insets right="10.0" />
                    </padding>
                </Label>
                <TextField fx:id="textField_sizeWidth" accessibleText="Breite des Diagramms in Millimeter" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label fx:id="label_sizeHeight" alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="18.0" text="%height" textAlignment="RIGHT" GridPane.halignment="RIGHT" GridPane.rowIndex="3">
                    <padding>
                        <Insets right="10.0" />
                    </padding>
                </Label>
                <TextField fx:id="textField_sizeHeight" accessibleText="Höhe des Diagramms in Millimeter" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label fx:id="label_colors" contentDisplay="RIGHT" prefHeight="17.0" prefWidth="300.0" text="%colors" GridPane.rowIndex="4" />
                <Label fx:id="label_color1" alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="18.0" text="%color1" textAlignment="RIGHT" GridPane.halignment="RIGHT" GridPane.rowIndex="5">
                    <padding>
                        <Insets right="10.0" />
                    </padding>
                </Label>
                <ChoiceBox fx:id="choiceBox_color1" accessibleText="Farbe 1 auswählen" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <Label fx:id="label_color2" alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="18.0" text="%color2" textAlignment="RIGHT" GridPane.halignment="RIGHT" GridPane.rowIndex="6">
                    <padding>
                        <Insets right="10.0" />
                    </padding>
                </Label>
                <ChoiceBox fx:id="choiceBox_color2" accessibleText="Farbe 2 auswählen" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
